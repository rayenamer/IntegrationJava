<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.JokeController"
            prefWidth="400" prefHeight="300" stylesheets="@styles.css">

    <children>

        <Button fx:id="jokeButton"
                layoutX="125" layoutY="30"
                prefWidth="150"
                text="Tell me a joke" />

        <TextArea fx:id="jokeArea"
                  layoutX="25" layoutY="80"
                  prefWidth="350" prefHeight="180"
                  wrapText="true"
                  editable="false" />

    </children>
</AnchorPane>
