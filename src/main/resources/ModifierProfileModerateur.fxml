<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.ModifierProfileModerateurController"
            prefWidth="600" prefHeight="600"
            style="-fx-background-color: #f0f0f0;">

    <VBox spacing="20" alignment="CENTER" AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20"
          AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">

        <Label text="Modifier Mon Profil Modérateur"
               style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

        <GridPane vgap="15" hgap="15" style="-fx-background-color: #ffffff; -fx-border-radius: 8px; -fx-padding: 20px;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Nom :" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
            <TextField fx:id="txtNom" GridPane.rowIndex="0" GridPane.columnIndex="1" promptText="Entrez votre nom" style="-fx-background-radius: 8px;"/>

            <Label text="Prénom :" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
            <TextField fx:id="txtPrenom" GridPane.rowIndex="1" GridPane.columnIndex="1" promptText="Entrez votre prénom" style="-fx-background-radius: 8px;"/>

            <Label text="Email :" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
            <TextField fx:id="txtEmail" GridPane.rowIndex="2" GridPane.columnIndex="1" promptText="Entrez votre email" style="-fx-background-radius: 8px;"/>

            <Label text="Téléphone :" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
            <TextField fx:id="txtTel" GridPane.rowIndex="3" GridPane.columnIndex="1" promptText="Entrez votre numéro" style="-fx-background-radius: 8px;"/>

            <Label text="Domaine :" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
            <TextField fx:id="txtDomaine" GridPane.rowIndex="4" GridPane.columnIndex="1" promptText="Entrez votre domaine" style="-fx-background-radius: 8px;"/>

            <Label text="Société :" GridPane.rowIndex="5" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
            <TextField fx:id="txtSociete" GridPane.rowIndex="5" GridPane.columnIndex="1" promptText="Entrez votre société" style="-fx-background-radius: 8px;"/>
        </GridPane>

        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="btnAnnuler" text="Annuler" onAction="#handleAnnuler"
                    style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-background-radius: 8px; -fx-padding: 10px 20px;"/>
            <Button fx:id="btnEnregistrer" text="Enregistrer" onAction="#handleEnregistrer"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 8px; -fx-padding: 10px 20px;"/>
        </HBox>
    </VBox>
</AnchorPane> 