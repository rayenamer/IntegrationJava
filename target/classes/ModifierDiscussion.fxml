<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.ModifierDiscussionController"
      spacing="15"
      style="-fx-background-color: white; -fx-padding: 20px;">

    <Label text="Edit Discussion" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    
    <TextField fx:id="titleField" 
              promptText="Discussion Title"
              style="-fx-background-radius: 5px; -fx-padding: 8px;"/>
              
    <TextArea fx:id="contentArea" 
              promptText="Discussion Content"
              wrapText="true"
              prefRowCount="5"
              style="-fx-background-radius: 5px; -fx-padding: 8px;"/>
              
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" 
                onAction="#handleCancel"
                style="-fx-background-color: #6c757d; -fx-text-fill: white;"/>
        <Button text="Save Changes" 
                onAction="#handleSave"
                style="-fx-background-color: #28a745; -fx-text-fill: white;"/>
    </HBox>

</VBox>
